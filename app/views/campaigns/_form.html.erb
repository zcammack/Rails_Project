<%= form_with model: @campaign do |f| %>

  <% if @campaign.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@campaign.errors.count, "error") %> prohibited
        this campaign from being saved:
      </h2>
      <ul>
        <% @campaign.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @party.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@party.errors.count, "error") %> prohibited
        this party from being saved:
      </h2>
      <ul>
        <% @party.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<h4>Campaign Details</h4>
	<% @campaign.user_id = current_user.id %>

	<%= f.label :title %>
	<%= f.text_field :title %><br /><br />

	<%= f.label :description%>
	<%= f.text_area :description %><br /><br /><br />

	<h4>Starting Party:</h4>

	<% @party.user_id = current_user.id %>

	<%= f.fields_for :parties do |a| %>

		<%= a.label :name %>
		<%= a.text_field :name %><br /><br />

 	<% end %> 
    <%= f.submit %>
<% end %>