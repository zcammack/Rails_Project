<h1>List of All Campaigns</h1>

<%= link_to 'New Campaign', new_campaign_path %>

<table>
    <tr>
        <th>Title</th>
        <th colspan="3"></th>
    </tr>
    
    <% @campaigns.each do |campaign| %>
        <tr>
            <td><%= campaign.title %></td>
            <td><%= link_to 'Show', campaign_path(campaign) %></td>
            <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
            <td><%= link_to 'Delete', campaign_path(campaign),
                    method: :delete,
                    data: { confirm: 'Are you sure?'} %>
            </td>
        </tr>
    <% end %>
</table>