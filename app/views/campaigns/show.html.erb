<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
<% end %>
<% if @campaign.errors.any? %>
  <% @campaign.errors.full_messages.each do |error_message| %>
    Error: <%= error_message %> <br />
  <% end %>
<% end %>
<h2>Your Campaign Parameters</h2>
<%= render 'form' %>
<br>

<%= link_to 'All Campaigns', campaigns_path %><br>

<%= link_to 'New Campaign', new_campaign_path %><br>

<%= link_to 'Edit Campaign', edit_campaign_path(@campaign) %><br>

<%= link_to 'Delete', campaign_path(@campaign), method: :delete, data: { confirm: 'Are you sure?', disable_with: "Working..." } %><br>
